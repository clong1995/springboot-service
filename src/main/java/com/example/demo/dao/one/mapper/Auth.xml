<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.one.AuthDao">
    <select id="findByUsername" resultType="com.example.demo.domain.auth.UserDetail">
        SELECT id, username, password from user where username = #{username};
    </select>

    <insert id="insert" parameterType="com.example.demo.domain.auth.UserDetail"
            useGeneratedKeys="true"
            keyColumn="id"
            keyProperty="id">
        insert into user (username, password,updateTime) VALUES (#{username}, #{password},#{updateTime});
    </insert>

    <insert id="insertRole">
        insert into user_role (user, role) VALUES (#{user}, #{role});
    </insert>

    <select id="findRoleById" resultType="com.example.demo.domain.auth.Role">
      select id, name, nameZh from role where id = #{id}
    </select>

    <select id="findRoleByUserId" resultType="com.example.demo.domain.auth.Role">
        select * from role where id in (SELECT role from user_role where user = #{id})
    </select>
</mapper>